{
  "manifest_version": 3,
  "name": "TechNews - Hacker News Reader",
  "version": "1.2",
  "description": "A modern Chrome extension to read Hacker News stories with a beautiful interface",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://hacker-news.firebaseio.com/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "TechNews - Hacker News Reader"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  }
}