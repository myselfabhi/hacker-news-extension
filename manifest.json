{
  "manifest_version": 3,
  "name": "Hacker News Reader",
  "version": "1.2",
  "description": "A simple Chrome extension to read Hacker News stories",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hacker News Reader"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  }
}